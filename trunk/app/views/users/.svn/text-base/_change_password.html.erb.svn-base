<% remote_form_for :user,@user, :url => {:controller => "users", :action => 'change_password'} do %>
  <div style="float:left;">
    <table cellpadding="0" cellspacing="0" align="left" border="0">
      <tr>
        <td align="left">
          <table cellpadding="2" cellspacing="3" border="0" width="100%">
            <tr>
              <td>
              <label for="old_password">Old Password</label></td>
              <td><input type="password" name="old_password" /></td>
            </tr>
            <tr>
              <td> <label for="new_password">New Password</label></td>
              <td><input type="password" name="new_password" /></td>
            </tr>
            <tr>
              <td align="left"><label for="new_password_confirmation">Confirm New Password</label></td>
              <td><input type="password" name="new_password_confirmation" /></td>
            </tr>
            <tr>
              <td align="right">
                &nbsp;
              </td>
              <td align="right">
                <br/>
                <%= submit_tag 'Change Password', :class => "button" %>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
<% end %>






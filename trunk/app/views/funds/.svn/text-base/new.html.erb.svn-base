<% if current_user.has_role('Admin') %>
  <div class="content-box">
    <div class="content-box-header">
      <h3 style="cursor: s-resize;">
        <% if @newfund %>
          Post a New Fund to Sell
        <% else %>
          Create New Fund
        <% end %>
      </h3>
      <div style="float: right;margin: 10px;">
        <%= link_to 'All Funds', funds_path, :class=>"button" %>
      </div>
      <div class="clear"></div>
    </div>
    <div class="content-box-content">
      <div style="display: block;" class="tab-content default-tab scrollDiv">
      <% else %>
        <% if @newfund %>
          <%= render :partial => "layouts/form_header", :locals => {:heading => "Post a New Fund to Sell"} %>
        <% else %>
          <%= render :partial => "layouts/form_header", :locals => {:heading => "Create Fund"} %>
        <% end %>
      <%end%>
      <div class="formBox">
        <div class="formBoxInner">
          <% form_for(@fund) do |f| %>
            <table cellpading="0" cellspacing="0" border="0"style="padding-top:10px;" align="center" width="100%">
              <tr>
                <td valign="top" >
                  <center><%= f.error_messages %></center>
                  <%= render :partial => "form", :locals => {:f => f} %>
                  <br/>
                </td>
              </tr>
            </table>
            <center><%= f.submit "Add Fund", :class => "button"%></center>
          <% end %>
          <br/>
        </div>
        <br/>

      </div>
      <div class="clear"></div>
      <% if current_user.has_role('Admin') %>
      </div>
    </div>
  </div>
<% end %>
<script text="text/javascript">
  window.onload = function() {
    document.title = 'Create Fund - Trusted Insight'
  };
</script>




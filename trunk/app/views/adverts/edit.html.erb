<div class="content-box">
  <div class="content-box-header">
    <h3 style="cursor: s-resize;">
      Edit Advertisment
    </h3>
    <div style="float: right;margin: 10px;"><%= link_to 'Back', adverts_path, :class => "button" %></div>
    <div class="clear"></div>
  </div>
  <div class="content-box-content">
    <div style="display: block;" class="tab-content default-tab scrollDiv">
      <%= error_messages_for :advert %>

      <% form_for(@advert, :url => {:controller => "adverts", :action => "update"},
        :html => { :multipart => true }) do |f| -%>
        <table>
          <tr>
            <td><label for="advert">Advertisment Name:</label></td>
            <td><%= f.text_field :name, :style => "width:220px !important;" %><br/></td>
          </tr>
          <tr>
            <td><label for="advert">Advertisment Link:</label></td>
            <td>http://<%= f.text_field :link, :style => "width:220px !important;" %><br/></td>
          </tr>
          <tr>
            <td><label for="advert">Upload An Image:</label></td>
            <td><%= f.file_field :uploaded_data %></td>
          </tr>
          <tr>
            <td>&nbsp;</td>
            <td><%= submit_tag 'Update' , :class => "button"%></td>
          </tr>
        </table>
      <% end -%>
    </div>
  </div>
</div>

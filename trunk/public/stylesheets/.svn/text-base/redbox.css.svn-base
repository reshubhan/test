#RB_overlay {
  position: absolute;
  z-index:100;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  min-height:100%;
  background-color: #000;
  opacity: .6;
  filter: alpha(opacity=60);
}

#RB_loading {
  z-index: 101;
  width: 70px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 200px;
  padding-bottom: 30px;
  text-align: center;
  background: url(../images/redbox_spinner.gif) no-repeat bottom center;
}

#RB_window {
  border: 3px solid #a6a6a6;
  z-index: 102;
  background-color: #FFFFFF;
  display: block;
  text-align: left;
  overflow: hidden;
  margin: 20px auto 0 auto;
  position:fixed;
  position: absolute;
}

